<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- VISTA PRINCIPAL: LISTA DE FACTURAS -->
    <LinearLayout
        android:id="@+id/layoutLista"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom_navigation_factura"
        android:orientation="vertical"
        android:padding="16dp"
        android:visibility="visible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/factura_title"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="12dp"/>

        <ListView
            android:id="@+id/listViewFacturas"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:divider="#CCC"
            android:dividerHeight="1dp"/>

    </LinearLayout>

    <!-- FORMULARIO PARA CREAR/EDITAR FACTURA (Oculto por defecto) -->
    <ScrollView
        android:id="@+id/layoutFormulario"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:background="?android:attr/colorBackground"
        android:layout_above="@+id/bottom_navigation_factura_form">

        <LinearLayout
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/lblTituloFormulario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/factura_form_title"
                android:textSize="26sp"
                android:textStyle="bold"
                android:layout_marginBottom="16dp"/>

            <!-- Encabezado de la Factura -->
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/factura_number_label"/>
            <EditText
                android:id="@+id/txtNumeroFactura"
                android:enabled="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"/>

            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/factura_date_label"/>
            <TextView
                android:id="@+id/txtFecha"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:textSize="18sp"
                android:padding="8dp"
                android:background="@android:drawable/editbox_background"
                android:layout_marginBottom="12dp"/>

            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/factura_customer_label"/>
            <Spinner
                android:id="@+id/spinnerClientes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"/>

            <!-- Sección para Agregar Productos -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/factura_add_product_title"
                android:textSize="20sp"
                android:textStyle="bold" />
                
            <Spinner
                android:id="@+id/spinnerProductosForm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"/>

            <EditText
                android:id="@+id/txtCantidadForm"
                android:hint="@string/factura_quantity_hint"
                android:inputType="number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"/>

            <Button
                android:id="@+id/btnAgregarProductoAlDetalle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/factura_add_product_button"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp"/>

            <!-- Lista de Detalles de la factura actual -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/factura_detail_title"
                android:textSize="20sp"
                android:textStyle="bold"/>

            <ListView
                android:id="@+id/listViewDetalleFormulario"
                android:layout_width="match_parent"
                android:layout_height="200dp"/>

        </LinearLayout>
    </ScrollView>
    
    <!-- Barra de Navegación del Formulario -->
    <LinearLayout
        android:id="@+id/bottom_navigation_factura_form"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:background="#FFFFFF"
        android:elevation="8dp"
        android:visibility="gone">

        <Button
            android:id="@+id/btnGuardarFactura"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/factura_save"/>
        <Button
            android:id="@+id/btnCancelar"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/factura_cancel"/>
    </LinearLayout>

    <!-- Barra de Navegación Principal -->
    <LinearLayout
        android:id="@+id/bottom_navigation_factura"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:background="#FFFFFF"
        android:elevation="8dp">

        <TextView
            android:id="@+id/btnAgregar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/factura_add"
            android:drawableTop="@android:drawable/ic_menu_add"
            android:padding="12dp"/>

        <TextView
            android:id="@+id/btnEditar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/factura_edit"
            android:drawableTop="@android:drawable/ic_menu_edit"
            android:padding="12dp"/>

        <TextView
            android:id="@+id/btnEliminar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/factura_delete"
            android:drawableTop="@android:drawable/ic_menu_delete"
            android:padding="12dp"/>

        <TextView
            android:id="@+id/btnSalir"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/factura_exit"
            android:drawableTop="@android:drawable/ic_menu_revert"
            android:padding="12dp"/>
    </LinearLayout>
</RelativeLayout>